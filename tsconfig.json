{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ES2015",
        "outDir": "dist",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "index.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}